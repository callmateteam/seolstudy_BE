[Unit]
Description=SeolStudy API Server
After=network.target

[Service]
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/seolstudy
Environment="PATH=/home/ubuntu/seolstudy/.venv/bin:/usr/local/bin:/usr/bin:/bin"
EnvironmentFile=/home/ubuntu/seolstudy/.env
ExecStart=/home/ubuntu/seolstudy/.venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
